{
  "plugins": {},
  "filters": {
    "comments": true
  },
  "rules": {
    "@textlint-ja/no-dropping-i": true,
    "no-doubled-joshi": true,
    "no-dropping-the-ra": true,
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 150
      },
      "max-kanji-continuous-len": {
        "max": 6,
        "allow": ["情報処理装置及", "情報処理方法", "係数決定逆問題", "計算工学講演会論文集","東京大学大学院数理科学研究科", "偏微分方程式系", "城西大学理学部","北海道大学電子科学研究所",""]
      },
      "ja-no-successive-word": false,
      "ja-no-mixed-period": false
    },
    "rousseau": true, 
    "@proofdict/proofdict": {
        "dictURL": "https://azu.github.io/proof-dictionary/"
      }
  }
}
